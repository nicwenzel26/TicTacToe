<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="game category"
        app:title="Game Settings">

        <CheckBoxPreference
            app:key="numPlayers"
            android:title="Two Player?"
            />


        <CheckBoxPreference
            app:key="humanStart"
            app:title="Human Goes First?"/>

        <CheckBoxPreference
            app:key="player_symb"
            app:title="Player 1 is X?"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="sys setting"
        app:title="System Settings">

        <Preference
            app:key="erase"
            app:title="Erase Database"
            app:summary="Erase all records of games played."
            app:icon="@drawable/ic_delete"/>

    </PreferenceCategory>

</PreferenceScreen>